@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <urn:example:>.

# declare components
:add a log:Component.
:multiply a log:Component.
:factorial a log:Component.
:fac a log:Component.

# add
(_:A) log:onNegativeSurface {
    () log:onNegativeSurface {
        (_:A 0) :add _:A.
    }.
}.

(_:A _:B _:C) log:onNegativeSurface {
    () log:onNegativeSurface {
        (_:A (:s _:B)) :add (:s _:C).
    }.
    (_:A _:B) :add _:C.
}.

# multiply
(_:A) log:onNegativeSurface {
    () log:onNegativeSurface {
        (_:A 0) :multiply 0.
    }.
}.

(_:A _:B _:C _:D) log:onNegativeSurface {
    () log:onNegativeSurface {
        (_:A (:s _:B)) :multiply _:C.
    }.
    (_:A _:B) :multiply _:D.
    (_:A _:D) :add _:C.
}.

# factorial
(_:A _:B) log:onNegativeSurface {
    () log:onNegativeSurface {
        _:A :factorial _:B.
    }.
    (_:A (:s 0)) :fac _:B.
}.

(_:A) log:onNegativeSurface {
    () log:onNegativeSurface {
        (0 _:A) :fac _:A.
    }.
}.

(_:A _:B _:C _:D) log:onNegativeSurface {
    () log:onNegativeSurface {
        ((:s _:A) _:B) :fac _:C.
    }.
    (_:B (:s _:A)) :multiply _:D.
    (_:A _:D) :fac _:C.
}.

